{
  "compilerOptions": {
    "outDir": "./dist", //输出目录 tsc
    "sourceMap": true, //是否要生成sourceMap文件
    "noImplicitAny": true, //是否不允许出现隐含any类型
    "module": "commonjs", //模块规范,要把所有的模块编译成什么模块
    "target": "es5", //编译目标是es5
    "jsx": "react", //如何编译jsx语法
    "esModuleInterop": true, //允许common.js模块和es module进行转换
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*" //只编译src目录下的ts文件
  ]
}